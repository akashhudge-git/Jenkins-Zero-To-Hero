pipeline {
  agent {
    docker {
      image 'akashhudge123/maven-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage("Checkout") {
      steps {
          git branch: 'main', credentialsId: 'github', url: 'https://github.com/akashhudge-git/Jenkins-Zero-To-Hero.git'
      }
    }

    stage("Build and Test") {
      steps {
          sh '''
            cd /var/lib/jenkins/workspace/ultimate-cicd/java-maven-sonar-argocd-helm-k8s/spring-boot-app
            echo "Cleaning and packaging the application..."
            mvn clean package

            echo "Running tests..."
            mvn test
          '''
      }
    }
  }
}
